{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "extends": [
        "eslint:recommended",
        "airbnb",
        "airbnb-typescript",
        "plugin:import/recommended",
        "plugin:import/electron",
        "plugin:import/typescript"
      ]
    },
    {
      "files": ["*.js"],
      "extends": [
        "eslint:recommended",
        "plugin:import/recommended"
      ]
    }
  ]
}
